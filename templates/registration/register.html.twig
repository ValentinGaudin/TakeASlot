{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Register
{% endblock %}

{% block body %}

	<div class="rounded-xl bg-no-repeat bg-fixed bg-cover bg-center w-full bg-[url('/assets/images/index.png')] ">
		{{ form_start(form) }}
		<div class="font-sans tracking-wide bg-gray-500 bg-opacity-60 w-full min-h-screen top-20 backdrop-filter backdrop-blur-md">
			<div class="p-2 bg-white z-10 justify-center items-center mx-10 sm:m-auto h-1/3 sm:w-1/2 sm:h-1/3 md:w-1/2 md:h-1/3 lg:w-1/3 lg:h-1/3 rounded-3xl filter drop-shadow-2xl relative top-20 -left-52">
				<div class="flex p-1 mt-1 mx-2 sm:mx-4 sm:mt-4 border-black items-center justify-between">
					<div class="flex">
						<p class="text-gray-600 lg:block">Have an account?</p>
						<a class="text-blue-600 ml-1 text-sm sm:text-md" href="{{ path('login') }}">Log in</a>
					</div>
				</div>
				<div class="ml-2 mr-2 mt-3 sm:mx-6 sm:mt-8">
					<h1 class="text-xl text-gray-600 sm:text-md font-bold">
						Manage your favorite activities  with us!
					</h1>
					<p class="text-xs sm:text-sm text-gray-400 mt-2">
						Takes less than 10 minutes to fill out all the information needed to register
					</p>
				</div>
				<div class="mx-2 mt-4 sm:mx-6 sm:mt-8">
					<div class="relative my-8 p-5">
						{{ form_label(form.firstName, "Your Firstname : ", {
            label_attr: {
                class: "w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none"
            }
        }) }}
						{{ form_widget(form.firstName, {
                attr: {
                    class: "w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none",
                    placeholder: "Alain",
                    }
                }) }}
					</div>
					<div class="relative my-8 p-5">
						{{ form_label(form.lastName, "Your Lastname : ", {
            label_attr: {
                class: "w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none mt-4"
            }
        }) }}
						{{ form_widget(form.lastName, {
                attr: {
                    class: "w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none",
                    placeholder: "Capable",
                    }
                }) }}
					</div>
					<div class="relative my-8 p-5">
						{{ form_label(form.telephone, "Your Telephone : ", {
            label_attr: {
                class: "w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none"
            }
        }) }}
						{{ form_widget(form.telephone, {
                attr: {
                    class: "w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none",
                    placeholder: "781",
                    }
                }) }}
					</div>
					<div class="relative my-8 p-5">
						{{ form_label(form.email, "Your email : ", {
            label_attr: {
                class: "w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none"
            }
        }) }}
						{{ form_widget(form.email, {
                attr: {
                    class: "w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none",
                    placeholder: "alain@fakebook.com",
                    }
                }) }}
					</div>
					<div class="relative my-8 p-5">
						{{ form_label(form.plainPassword, "Your password : ", {
            label_attr: {
                class: "w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none"
            }
        }) }}
						{{ form_widget(form.plainPassword, {
                attr: {
                    class: "w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none",
                    placeholder: "kiki45",
                    label: "Password"
                    }
                }) }}
					</div>
					{{ form_label(form.agreeTerms, "By signing up you are agreeing to our Terms and Conditions : ", {
            label_attr: {
                class: "w-full h-4 sm:h-9 focus:border-blue-300 outline-none"
            }
        }) }}
					{{ form_widget(form.agreeTerms, {
                attr: {
                    class: "w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none active:bg-primary-dark",
                    }
                }) }}
					<div class="justify-center items-center mt-2 sm:mt-5 flex">
						<button type="submit" class=" bg-primary-light text-gray-100 rounded-mdh-8 sm:h-auto sm:rounded-lg w-20 sm:w-52 p-1 text-xs sm:text-md sm:p-3 ">
							Get Started
						</button>
					</div>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	{% endblock %}
