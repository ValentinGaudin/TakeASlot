{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	-Login
{% endblock %}
{% block body %}
		<div class=" p-2 bg-white z-10 justify-center items-center w-full mx-10 m-auto sm:m-auto h-1/3 sm:w-1/2 sm:h-1/3 md:w-1/2 md:h-1/3 lg:w-1/3 lg:h-1/3 rounded-3xl filter drop-shadow-2xl relative top-20 ">
			<div class="flex p-1 mt-1 mx-2 sm:mx-4 sm:mt-4 border-black items-center justify-between">
				<div class="flex flew-row">
					<p class="text-gray-600 hidden lg:block">Don't have an account?</p>
					<a class="text-blue-600 ml-1 text-sm sm:text-md" href="{{ path('app_register') }}">Register in</a>
				</div>
			</div>
			<div class="ml-2 mr-2 mt-3 sm:mx-6 sm:mt-8">
				<h1 class="text-xl text-gray-600 sm:text-md font-bold">
					Manage your favorite activities  with us!
				</h1>
				<p class="text-xs sm:text-sm text-gray-400 mt-2">
					Takes less than 10 minutes to fill out all the information needed to register
				</p>
			</div>
			<div class="mx-2 mt-4 sm:mx-6 sm:mt-8">
				{% if error %}
					<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				<form action="{{ path('login') }}" method="post">

					<div class="relative my-8 p-5">
						<label for="username" class="w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none">Email:</label>
						<input type="text" id="username" name="_username" value="{{ last_username }}" class="w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none"/>
					</div>

					<div class="relative my-8 p-5">

						<label for="password" class="w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none">Password:</label>
						<input type="password" id="password" name="_password" class="w-full h-4 sm:h-9 border-b-2 border-gray-300 focus:border-blue-300 outline-none"/>

					</div>

					<div class="justify-center items-center mt-2 sm:mt-5 flex">
						<button type="submit" class=" bg-primary-light text-gray-100 rounded-mdh-8 sm:h-auto sm:rounded-lg w-20 sm:w-52 p-1 text-xs sm:text-md sm:p-3 ">
							Get Started
						</button>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<input type="hidden" name="_target_path" value="/activity"/>
					</div>
				</form>
			</div>
	{% endblock %}