{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
{% endblock %}

{% block body %}
	<div class="bg-white">
		<div class=" bg-slate-500 max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8 ">
			<h2 class="sr-only">Products</h2>
			<div class="bg-slate-500 grid grid-cols-1 gap-y-10 sm:grid-cols-2 gap-x-6 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
				{% for product in products %}
					<div class="">
						<a href="{{ product.url }}" target="_blank" class="group">
							<div class="bg-orange w-full aspect-w-1 aspect-h-1 rounded-lg overflow-hidden xl:aspect-w-7 xl:aspect-h-8">
								<img src="{{ product.picture }}" alt="" class="w-full h-full object-center object-cover group-hover:opacity-75 ">
							</div>
							<i>
								H :
								{{ product.height }}
								L :
								{{ product.width }}
								P :
								{{ product.depth }}
							</i>
							<h3 class="mt-4 text-sm text-gray-700">
								{{ product.name }}
							</h3>
							<p class="mt-1 text-lg font-medium text-gray-900">
								{{ product.price }}
								&#8364;
							</p>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
